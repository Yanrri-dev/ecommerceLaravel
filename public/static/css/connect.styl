body
    margin 0px
    background-color #f6f6f6

.box
    background-color #fff
    border-radius 8px
    border 1px solid #d6d6d6
    position absolute
    width 500px
    .btn-primary
        width 100%
        background-color #91A7FF
        border 0px
    .inside
        padding 16px
    .header
        padding 16px
        border-radius 8px 8px 0px 0px
        a
            img 
                display block
                width 50%
                margin 0px auto
    .footer
        text-align center
        a
            display inline-block
            font-size .8em
            &:last-child
                margin-left 26px


.mtop16
    margin-top 16px

.box-login
    left calc(50% - 250px)
    top calc(50% - 255px)

.box-register
    left calc(50% - 250px)
    top calc(50% - 372px)